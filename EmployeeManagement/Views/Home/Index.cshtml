@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-group">
    @foreach (var employee in Model)
    {
        //var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
        // Resolve the photo path for the employee.
        // If the employee has a photo path, use it; otherwise, use the default "noimage.jpg".
        var photoPath = Url.Content("~/images/" + (!string.IsNullOrEmpty(employee.PhotoPath) ? employee.PhotoPath : "noimage.jpg"));

        <div class="card m-3" style= "min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details"
                   asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a asp-asp-controller="Home" asp-action="Edit" 
                    asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>